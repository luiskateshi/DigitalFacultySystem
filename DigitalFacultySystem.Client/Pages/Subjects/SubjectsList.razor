@page "/subjects"
@attribute [Authorize(Roles = "admin, staff")]

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lëndët</h3>
        <a href="Subject" class="btn btn-primary mb-3">Shto Lëndë</a>
    </div>

    @if (subjects == null)
    {
        <p><em>Duke ngarkuar...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID e Lëndës</th>
                        <th scope="col">Emri i Lëndës</th>
                        <th scope="col class="text-end pe-3">Veprimet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in subjects)
                    {
                        <tr>
                            <td>@subject.Id</td>
                            <td>@subject.Name</td>
                            <td class="text-end pe-3"><a href="@("Subject/" + subject.Id)" class="btn btn-warning">Edito</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
