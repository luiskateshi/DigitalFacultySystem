@page "/Departments"
@attribute [Authorize(Roles = "admin, staff")]

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lista e Departamenteve</h3>
        <a href="@("Department")" class="btn btn-primary mb-3">Shto departament</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Emri</th>
                    <th scope="col" class="text-end pe-3">Veprimet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in departments)
                {
                    <tr>
                        <td>@row.Id</td>
                        <td>@row.Name</td>
                        <td class="text-end pe-3"><a href="@("Department/" + row.Id)" class="btn btn-warning">Edito</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
