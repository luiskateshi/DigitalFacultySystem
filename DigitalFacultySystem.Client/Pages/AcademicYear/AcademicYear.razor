@page "/AcademicYear"
@page "/AcademicYear/{id}"
@attribute [Authorize(Roles = "Admin, Staff")]


@if (string.IsNullOrEmpty(Id))
{
    <PageTitle>Academic Year Add</PageTitle>
    <h3>Add a new Academic Year</h3>
}
else
{
    <PageTitle>Academic Year</PageTitle>
    <h3>Academic Year - @academicYearModel.Name</h3>
    <p>Update Academic Year</p>
}


<div class="row card">
    <EditForm Model="@academicYearModel" OnValidSubmit="@HandleValidSumbit" OnInvalidSubmit="@HandleInValidSumbit" FormName="sampleForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Name</label>
            <InputText class="form-control" @bind-Value="academicYearModel.Name" />
            <label for="startDate">Start Date</label>
            <InputDate class="col-md-8 form-control" @bind-Value="academicYearModel.StartDate" />
            <label for="endDate">End Date</label>
            <InputDate class="col-md-8 form-control" @bind-Value="academicYearModel.EndDate" />
            <br />
            <button type="submit" class="btn btn-primary">Save</button>


            <div class="form-group">
                <p>@Message</p>
            </div>
        </div>
    </EditForm>
</div>
