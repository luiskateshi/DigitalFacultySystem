@page "/generations"
@attribute [Authorize(Roles = "admin, staff")]

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Gjeneratat</h3>
        <a href="Generation" class="btn btn-primary mb-3">Shto Gjeneratë të Re</a>
    </div>

    @if (generations == null)
    {
        <p><em>Duke ngarkuar...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Emri</th>
                        <th scope="col">Semestri Aktual i Studimeve</th>
                        <th scope="col" class="text-end pe-3">Veprimet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in generations)
                    {
                        <tr>
                            <td>@row.Name</td>
                            <td>@row.CurrentSemesterOfStudies</td>
                            <td class="text-end pe-3"><a href="@("Generation/" + row.Id)" class="btn btn-warning">Edito</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
