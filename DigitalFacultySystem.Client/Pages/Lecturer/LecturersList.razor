@page "/Lecturers"
@attribute [Authorize(Roles = "admin, staff")]

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Pedagogët</h3>
        <a href="Lecturer" class="btn btn-primary mb-3">Shto Pedagog</a>
    </div>

    @if (lecturers == null)
    {
        <p><em>Duke ngarkuar...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Emri</th>
                        <th scope="col">Mbiemri</th>
                        <th scope="col">Data e Lindjes</th>
                        <th scope="col">Nr. i Kartës së Identitetit</th>
                        <th scope="col">Grada</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefoni</th>
                        <th scope="col" class="text-end">Veprimet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in lecturers)
                    {
                        <tr>
                            <td>@row.Firstname</td>
                            <td>@row.Lastname</td>
                            <td>@row.Birthdate</td>
                            <td>@row.IdCard</td>
                            <td>@row.Grade</td>
                            <td>@row.Email</td>
                            <td>@row.Tel</td>
                            <td class="text-end"><a href="@("Lecturer/" + row.Id)" class="btn btn-warning">Edito</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
