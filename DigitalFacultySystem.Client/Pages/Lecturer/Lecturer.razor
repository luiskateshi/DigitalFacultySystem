@page "/Lecturer"
@page "/Lecturer/{id}"
@attribute [Authorize(Roles = "Admin, Staff")]

<h3>Lecturer - @lecturerModel.Grade @lecturerModel.Firstname @lecturerModel.Lastname</h3>

@if (string.IsNullOrEmpty(Id))
{
    <PageTitle>Lecturer Add</PageTitle>
    <h3>Add a new Lecturer</h3>
}
else
{
    <PageTitle>Lecturer Update</PageTitle>
    <p>Update Lecturer</p>
}


<div class="row card">
    <EditForm Model="@lecturerModel" OnValidSubmit="@HandleValidSumbit" OnInvalidSubmit="@HandleInValidSumbit" FormName="sampleForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Firstname</label>
            <InputText class="form-control" @bind-Value="lecturerModel.Firstname" />
            <label for="lastname">Lastname</label>
            <InputText class="form-control" @bind-Value="lecturerModel.Lastname" />
            <label for="birthdate">Birthdate</label>
            <InputDate class="form-control" @bind-Value="lecturerModel.Birthdate" />
            <label for="grade">Grade</label>
            <InputText class="form-control" @bind-Value="lecturerModel.Grade" />
            <label for="email">Email</label>
            <InputText class="form-control" @bind-Value="lecturerModel.Email" />
            <label for="phone">Phone</label>
            <InputText class="form-control" @bind-Value="lecturerModel.Tel" />
            <label for="idCard">Identity Card</label>
            <InputText class="form-control" @bind-Value="lecturerModel.IdCard" />


            <br />
            <button type="submit" class="btn btn-primary">Save</button>


            <div class="form-group">
                <p>@Message</p>
            </div>
        </div>
    </EditForm>
</div>