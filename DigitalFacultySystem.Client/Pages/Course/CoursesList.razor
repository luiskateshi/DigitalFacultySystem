@page "/courses"
@attribute [Authorize(Roles = "admin, staff")]

@inject NavigationManager NavManager

<PageTitle>Kurset</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lista e kurseve</h3>
        <div>
            <a href="course" class="btn btn-primary me-2">Shto kurs</a>
            <a @onclick="GenerateStudentsInCourses" class="btn btn-dark" >Gjenero Studentët në Kurse</a>
        </div>
    </div>

    <AlertCard @ref="alertCard" />

    @if (courses == null)
    {
        <p><em>Duke u ngarkuar...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Titulli i kursit</th>
                        <th class="text-end pe-3">Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in courses)
                    {
                        <tr>
                            <td>@row.Name</td>
                            <td class="text-end pe-3">
                                <a href="@($"Course/{row.Id}")" class="btn btn-warning">Përditëso</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>