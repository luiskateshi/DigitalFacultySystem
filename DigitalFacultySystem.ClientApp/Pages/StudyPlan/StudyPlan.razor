@page "/StudyPlan"
@page "/StudyPlan/{id}"

<h3>Study Plan - @studyPlanModel.Name</h3>

@if (string.IsNullOrEmpty(Id))
{
    <PageTitle>Study Plan Add</PageTitle>
    <h3>Add a new Study Plan</h3>
}
else
{
    <PageTitle>Study Plan Update</PageTitle>
    <p>Update Study Plan</p>
}

<div class="row card">
    <EditForm Model="@studyPlanModel" OnValidSubmit="@HandleValidSumbit" OnInvalidSubmit="@HandleInValidSumbit" FormName="sampleForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Name</label>
            <InputText class="form-control" @bind-Value="studyPlanModel.Name" />
            <label for="startDate">Start Date</label>
            <InputDate class="form-control" @bind-Value="studyPlanModel.StartDate" />
            <label for="endDate">End Date</label>
            <InputDate class="form-control" @bind-Value="studyPlanModel.EndDate" />
            <label for="degreeProgramId">Degree Program</label>
            <InputSelect class="form-control" @bind-Value="studyPlanModel.DegreeProgId">
                @foreach (var degreeProgram in degreePrograms)
                {
                    <option value="@degreeProgram.Id">@degreeProgram.Name</option>
                }
            </InputSelect>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>


            <div class="form-group">
                <p>@Message</p>
            </div>
        </div>
    </EditForm>
</div>