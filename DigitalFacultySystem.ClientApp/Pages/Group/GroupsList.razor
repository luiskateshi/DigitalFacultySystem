@page "/groups"
<h3>Groups</h3>

@if (groups == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <a href="group" class="btn btn-primary">Add New</a>
    <table class="table">
        <thead>
            <tr>
                <th>Group ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in groups)
            {
                <tr>
                    <td>@row.Id</td>
                    <td>@row.Name</td>
                    <td><a href="@("Group/" + row.Id)" class="btn btn-warning">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}